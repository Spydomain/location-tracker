# Copy this file to .env and fill in the values
PORT=5000

# If you deploy the app, set your hosted HTTPS URL to skip ngrok (e.g., https://your-app.onrender.com)
BASE_URL=

# Optional: ngrok authtoken (used by ngrok CLI or pyngrok fallback)
NGROK_AUTHTOKEN=

# Auto-open the Latest dashboard in a browser (true/false). Default: false (terminal only)
AUTO_OPEN_LATEST=false

# Optional: Twilio credentials (from https://www.twilio.com/console) for auto-SMS
TWILIO_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_TOKEN=your_auth_token_here
TWILIO_FROM=+12345550123

# Optional default: consenting recipient's phone number (E.164 format)
TARGET_NUMBER=+12345550124

# Optional: custom message prefix
MESSAGE_PREFIX="Hi! Please tap this secure link to share your location: "

# Optional: IP geolocation fallback (true/false). When true, server may query a public API to resolve coarse lat/lon from IP
IP_GEOLOOKUP=false
